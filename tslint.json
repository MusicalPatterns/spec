{
  "extends": [
    "tslint:all",
    "tslint-eslint-rules",
    "tslint-sonarts",
    "tslint-react"
  ],
  "rulesDirectory": [
    "node_modules/@musical-patterns/cli/lint"
  ],
  "rules": {
    "array-bracket-spacing": [
      true,
      "always"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "ban-ts-ignore": false,
    "ban-types": false,
    "brace-style": [
      true,
      "stroustrup"
    ],
    "completed-docs": false,
    "cyclomatic-complexity": [
      true,
      5
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "invalid-void": false,
    "max-file-line-count": [
      true,
      100
    ],
    "no-console": true,
    "no-constant-condition": true,
    "no-dynamic-delete": false,
    "no-implicit-dependencies": [
      true,
      "dev"
    ],
    "no-import-paths-without-names": true,
    "no-inferrable-types": false,
    "no-misleading-array-reverse": false,
    "no-namespace": false,
    "no-nonstandard-pattern-files": true,
    "no-reaching-imports": true,
    "no-type-definitions-outside-types-modules": true,
    "no-unbound-method": false,
    "no-unnecessary-initializer": false,
    "no-unsafe-any": false,
    "no-unused-variable": false,
    "no-use-before-declare": false,
    "object-curly-spacing": [
      true,
      "always"
    ],
    "one-line": false,
    "ordered-imports": [
      true,
      {
        "grouped-imports": false
      }
    ],
    "prefer-method-signature": false,
    "quotemark": [
      true,
      "single"
    ],
    "restrict-plus-operands": false,
    "semicolon": false,
    "strict-comparisons": false,
    "strict-boolean-expressions": false,
    "type-literal-delimiter": false,
    "use-primitive-type": false
  }
}
